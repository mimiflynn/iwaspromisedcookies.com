
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)
  p.date
    span= moment.utc(page.date).format('DD MMMM YYYY')

block content
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
